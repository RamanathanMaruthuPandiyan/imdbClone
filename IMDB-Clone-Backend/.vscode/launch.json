    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "env": {
                "NODE_ENV": "dev"
            },
            "runtimeExecutable": "/Users/ramanathan/.nvm/versions/node/v18.19.1/bin/node",
            "args": [
                "--verbose"
            ],
            "program": "${workspaceRoot}/www.js",
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceFolder}/routes/*.js",
                "${workspaceFolder}/services/*.js",
                "${workspaceFolder}/**/*.js",
                "!**/node_modules/**"
            ],
            "skipFiles": [
                "${workspaceFolder}/node_modules/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
        }
    ]
}